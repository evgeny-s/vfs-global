{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "target": "esNext",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src", "./test", "./types", "./scenarios"],
  "incremental": true,
  "typeRoots": [
    "./node_modules/@types"
  ]
}